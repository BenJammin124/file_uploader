generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  name        String?
  hash        String
  userStorage UserStorage?

  @@map("users")
}

model UserStorage {
  id     Int          @id @default(autoincrement())
  user   User         @relation(fields: [userId], references: [id])
  userId Int          @unique
  files  StoredFile[]
}

model StoredFile {
  id        Int         @id @default(autoincrement())
  title     String
  url       String
  createdAt DateTime    @default(now())
  fileType  String?
  storage   UserStorage @relation(fields: [storageId], references: [id])
  storageId Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@map("session")
}

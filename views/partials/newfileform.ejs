<dialog class="file-modal">
  <div class="modal-container">
    <div class="close-div">
      <button class="close-button">X</button>
    </div>
    <%- include('./errors') %>
    <form
      method="POST"
      action="/upload"
      enctype="multipart/form-data"
      class="modal-form"
      id="file-form"
    >
      <div class="form-group">
        <label for="file" id="file-name-label">File</label>
        <input id="file" type="file" name="file" required />
      </div>
      <div class="form-group">
        <label for="folderId">Select a folder:(optional)</label>
        <select name="folderId" id="folderId">
          <option value="00">No Folder</option>
          <% if (folders) { %> <% folders.forEach(folder => { %>

          <option value="<%= folder.id %>" <%= (selectedFolderId == folder.id) ? 'selected' : "" %>>
            <%= folder.name %>
          </option>
          
          <% }) %> <% } %>
        </select>
      </div>
      <button type="submit" class="submit-button">Submit File</button>
    </form>
  </div>
</dialog>

<dialog class="folder-modal">
  <div class="modal-container">
    <div class="close-div">
      <button class="close-button" type="button">X</button>
    </div>
    <%- include('./errors') %>
    <form
      id="folder-form"
      method="POST"
      action="/create-folder"
      class="modal-form"
    >
      <div class="form-group">
        <label for="folder">Folder name</label>
        <input type="text" id="folder" name="folder" required />
      </div>
      <button type="submit" class="submit-button" id="modal-submit-button">
        Create Folder
      </button>
    </form>
  </div>
</dialog>
